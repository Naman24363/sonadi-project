# =================================================
# DJANGO CORE SETTINGS
# =================================================
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =================================================
# SECURITY SETTINGS (set to True in production)
# =================================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# Comma-separated list of trusted origins for CSRF
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://*.your-host.com

# =================================================
# DATABASE CONFIGURATION (RENDER POSTGRESQL POOLER)
# =================================================
# Important: Use Render's connection pooler endpoint
# Replace 'dpg-*.postgres.render.com' with 'dpg-*.pool-c.postgres.render.com'
DB_NAME=postgres
DB_USER=your-render-db-user
DB_PASSWORD=your-render-db-password
DB_HOST=dpg-your-id.pool-c.postgres.render.com
DB_PORT=5432

# =================================================
# EMAIL CONFIGURATION (Gmail SMTP)
# =================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password

# Admin email to receive form submissions
ADMIN_EMAIL=your-admin-email@gmail.com

# =================================================
# RAZORPAY PAYMENT GATEWAY
# =================================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# =================================================
# ORGANIZATION CONTACT INFORMATION
# =================================================
ORG_NAME=Your Organization Name
ORG_PHONE=+91 1234567890
ORG_EMAIL=contact@your-org.com
ORG_WHATSAPP=1234567890

# Address
ORG_ADDRESS_LINE1=Street Address Line 1
ORG_ADDRESS_LINE2=City, State - Pincode
ORG_PINCODE=110001

# Google Maps
ORG_GOOGLE_MAPS_URL=https://maps.app.goo.gl/your-map-link
ORG_GOOGLE_MAPS_EMBED=https://www.google.com/maps/embed?pb=your-embed-code

# =================================================
